{
  "name": "python-helper-project",
  "displayName": "Python helper project",
  "description": "",
  "version": "0.4.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "python-helper-project.test",
        "title": "Test cmd"
      },
      {
        "command": "python-helper-project.newDelete",
        "title": "Test cmd"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "typing-assist.enableCursorDownAfterCommentLine": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic commenting feature."
        },
        "typing-assist.docstringFormat": {
          "type": "string",
          "default": "NumPy",
          "enum": [
            "Plain",
            "NumPy",
            "reStructuredText",
            "Google",
            "Epytext"
          ],
          "description": "Select standard docstring format"
        },
        "typing-assist.assistOptions": {
          "type": "array",
          "default": [
            "StringSeparator",
            "DocstringCompleter",
            "FunctionCompleter",
            "BracketingExpressionCompleter",
            "NewlineSpaceRemover",
            "CommentSeparator",
            "ReturnDedent"
          ],
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "StringSeparator",
              "DocstringCompleter",
              "FunctionCompleter",
              "BracketingExpressionCompleter",
              "NewlineSpaceRemover",
              "CommentSeparator",
              "ReturnDedent"
            ]
          },
          "description": "Enable/disable assist options"
        },
        "string-highlighting.json": {
          "type": "boolean",
          "default": true,
          "description": "Enable JSON string highlighting (reload required)"
        },
        "string-highlighting.xml": {
          "type": "boolean",
          "default": true,
          "description": "Enable XML string highlighting (reload required)"
        }
      }
    },
    "grammars": [
      {
        "injectTo": [
          "source.python"
        ],
        "scopeName": "text.python-xml",
        "path": "./syntaxes/python-xml.json",
        "embeddedLanguages": {
          "meta.embedded.block.xml": "xml"
        }
      },
      {
        "injectTo": [
          "source.python"
        ],
        "scopeName": "text.python-json",
        "path": "./syntaxes/python-json.json",
        "embeddedLanguages": {
          "meta.embedded.block.json": "json"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && xcopy /E /I /Y src\\lib out\\lib && xcopy /E /I /Y src\\test out\\test",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.0",
    "web-tree-sitter": "^0.20.8"
  }
}
